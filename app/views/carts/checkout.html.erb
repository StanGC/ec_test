<div class='row'>
   <div class='col-md-12'>
    <h2> 購物明細 </h2>
    <table class='table table-bordered'>
      <thead>
        <tr>
          <th width='80%'>商品明細</th>
          <th>單價</th>
          <th>數量</th>
        </tr>
      </thead>

      <tbody>
        <% current_cart.cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= link_to(cart_item.product.title, product_path(cart_item.product)) %>
            </td>
            <td>
              <%= cart_item.product.price %>
            </td>
            <td>
              <%= cart_item.quantity %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class='total clearfix'>
      <span class='pull-right'>
        總計 <%= render_cart_total_price(current_cart) %>
      </span>
    </div>

    <hr>

    <h2> 訂單資訊 </h2>
    <div class='order-form'>
      <%= simple_form_for @order do |f| %>
        <p> 購買人 </p>
        <div class='form-group col-lg-6'>
          <%= f.input :billing_name, label: '購買人姓名'  %>
        </div>
        <div class='form-group col-lg-6'>
          <%= f.input :billing_address, label: '購買人地址'  %>
        </div>

        <p> 收貨人 </p>
        <div class='form-group col-lg-6'>
          <%= f.input :shipping_name, label: '收貨人姓名'  %>
        </div>
        <div class='form-group col-lg-6'>
          <%= f.input :shipping_address, label: '收貨人地址'  %>
        </div>

        <div class='checkout'>
          <%= f.submit '建立訂單', class: 'btn btn-lg btn-danger pull-right',
                       data: { disable_with: 'Submitting...' } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
